# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                          controllers.Application.index()

# Admin
GET    /admin                     controllers.AdminController.index()

# Badges
GET    /badges                    controllers.BadgeController.badges()
POST   /addbadge                  controllers.BadgeController.addBadge()
GET   /badges/$id<[^/]+>.json    controllers.BadgeController.getJson(id: Long)
GET    /deletebadge/:id           controllers.BadgeController.delete(id: Long)

# Images
GET    /images                    controllers.ImageController.images()
POST   /addimage                  controllers.ImageController.addImage()
GET    /deleteimage/:id           controllers.ImageController.delete(id: Long)

# Issuers
GET    /issuers                   controllers.IssuerController.issuers()
GET    /issuers/$id<[^/]+>.json   controllers.IssuerController.getJson(id: Long)
POST   /addissuer                 controllers.IssuerController.addIssuer()
GET    /deleteissuer              controllers.IssuerController.delete(id: Long)


#
#
#

GET    /recocations.json          controllers.RevocationController.getRecocationsAsJson()


GET    /test                      controllers.BadgeController.test()

GET    /getfakebadge              controllers.AssertionController.createBadgeAssertion()

# Map static resources from the /public folder to the /assets URL path
GET    /webjars/*file             controllers.WebJarAssets.at(file)
GET    /assets/*file              controllers.Assets.at(path="/public", file)

